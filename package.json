{
  "name": "abbot-docs-new",
  "version": "0.0.0",
  "description": "Abbot (new) docs site",
  "main": "index.js",
  "scripts": {
    "lint": "run-s lint:markdown lint:imgs",
    "lint:markdown": "node script/markdownlint.js",
    "lint:imgs": "script/helpers/check-img-tags.sh",
    "build": "dotnet tool run docfx build src/docfx.json",
    "start": "npm-watch serve",
    "serve": "script/helpers/run-server"
  },
  "watch": {
    "serve": {
      "patterns": [
        "./src/**"
      ],
      "extensions": "md,yml,yaml",
      "quiet": false,
      "delay": 500
    }
  },
  "devDependencies": {
    "glob": "^10.3.3",
    "markdownlint": "^0.30.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0"
  }
}
